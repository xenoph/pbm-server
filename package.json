{
    "name": "pbm",
    "version": "1.0.0",
    "description": "",
    "main": "dist/server/index.js",
    "scripts": {
        "start": "node build/server/index.js",
        "dev": "run-p dev:*",
        "dev:web": "webpack-dev-server --config ./config/webpack.web.config.js",
        "dev:server-build": "webpack --watch --config ./config/webpack.server.config.js",
        "dev:server-run": "nodemon --watch ./build/server ./build/server/index.js",
        "dev:worker-build": "webpack --watch --config ./config/webpack.worker.config.js",
        "dev:worker-run": "nodemon --watch ./build/worker ./build/worker/index.js",
        "build": "run-p build:*",
        "build:web": "webpack --config ./config/webpack.web.config.js",
        "build:server": "webpack --config ./config/webpack.server.config.js",
        "build:worker": "webpack --config ./config/webpack.worker.config.js",
        "test": "run-s test:*",
        "test:all": "jest --color --verbose --coverage"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ]
    },
    "alias": {
        "web": "./src/web",
        "worker": "./src/worker",
        "server": "./src/server"
    },
    "author": "Bj√∏rn Vidar Dahle",
    "license": "ISC",
